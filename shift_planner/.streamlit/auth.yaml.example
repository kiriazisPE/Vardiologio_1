# Authentication configuration for Shift Planner
# Copy this file to auth.yaml and configure with your own credentials
# Passwords should be hashed using bcrypt

credentials:
  usernames:
    admin:
      email: admin@example.com
      name: Administrator
      password: $2b$12$REPLACE_WITH_BCRYPT_HASH  # Generate using bcrypt
    manager:
      email: manager@example.com
      name: Manager User
      password: $2b$12$REPLACE_WITH_BCRYPT_HASH  # Generate using bcrypt
    user:
      email: user@example.com
      name: Regular User
      password: $2b$12$REPLACE_WITH_BCRYPT_HASH  # Generate using bcrypt

cookie:
  expiry_days: 30
  key: CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION  # Use a strong random key
  name: shift_planner_cookie

preauthorized:
  emails:
    - admin@example.com

# Role-based permissions (optional - for future use)
roles:
  admin:
    - view_all_schedules
    - edit_schedules
    - manage_employees
    - manage_settings
  manager:
    - view_all_schedules
    - edit_schedules
    - view_employees
  user:
    - view_own_schedule

