{
  "name": "shift-planner-dev",
  "version": "2.0.0",
  "description": "Development scripts for Shift Planner (API + React)",
  "scripts": {
    "api": "cd shift_planner && python api.py",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run api\" \"npm run frontend\"",
    "test:reasoning": "cd shift_planner && python ci/evaluate_reasoning.py",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
